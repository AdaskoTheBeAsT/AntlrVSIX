<Window x:Class="VSIXProject1.SetWorkspace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Workspace Path" Height="200" Width="600">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox Name="workspace_path" Grid.Row="0" Grid.Column="0" Margin="10,0,10,10">Not set</TextBox>
        <WrapPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="10,0,0,0" >
            <Button IsDefault="True" Name="btnBrowse" Click="btnBrowse_Click" MinWidth="60" Margin="0,0,10,0">Browse</Button>
            <Button IsDefault="True" Name="btnDialogOk" Click="btnOK_click" MinWidth="60" Margin="0,0,10,0">Ok</Button>
        </WrapPanel>
    </Grid>
</Window>