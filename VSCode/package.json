{
	"name": "antlr",
	"description": "VSCode for Antlrvsix using LSP server",
	"author": "Ken Domino",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/kaby76/AntlrVSIX"
	},
	"bugs": {
		"url": "https://github.com/kaby76/AntlrVSIX/issues"
	},
	"publisher": "Ken Domino",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.48.0"
	},
	"activationEvents": [
		"onLanguage:antlr2",
		"onLanguage:antlr3",
		"onLanguage:antlr4",
		"onLanguage:bison",
		"onLanguage:ebnf"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "antlr2",
				"extensions": [
					".g2"
				]
			},
			{
				"id": "antlr3",
				"extensions": [
					".g3"
				]
			},
			{
				"id": "antlr4",
				"extensions": [
					".g4"
				]
			},
			{
				"id": "bison",
				"extensions": [
					".y"
				]
			},
			{
				"id": "ebnf",
				"extensions": [
					".ebnf"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.6.2",
		"tslint": "^5.16.0",
		"typescript": "^3.8.3"
	},
	"configuration": {
		"type": "object",
		"title": "server configuration",
		"properties": {
			"antlr.path": {
				"type": "string",
				"default": "antlr",
				"description": "The path to server executable"
			},
			"antlr.arguments": {
				"type": "array",
				"default": [],
				"items": {
					"type": "string"
				},
				"description": "Arguments for server"
			},
			"antlr.syncFileEvents": {
				"type": "boolean",
				"default": true,
				"description": "Whether or not to send file events to server (File created, changed or deleted). This can be disabled for performance consideration."
			},
			"antlr.trace": {
				"type": "string",
				"description": "Names a file that server should log a performance trace to, in chrome trace-viewer JSON format."
			}
		}
	}
}
