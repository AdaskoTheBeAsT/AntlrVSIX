{
    "name": "Antlrvsix",
    "description": "Language server for Antlr2, 3, 4, Bison, W3C EBNF",
    "author": "Ken Domino",
    "license": "MIT",
    "version": "1.0.0",
    "publisher": "domemtech",
    "repository": {
        "type": "git",
        "url": "https://github.com/kaby76/AntlrVSIX"
    },
    "bugs": {
        "url": "https://github.com/kaby76/AntlrVSIX/issues"
    },
    "categories": [],
    "keywords": [
        "antlr bison ebnf"
    ],
    "engines": {
        "vscode": "^1.48.0"
    },
    "activationEvents": [
        "onLanguage:antlr2",
        "onLanguage:antlr3",
        "onLanguage:antlr4",
        "onLanguage:bison",
        "onLanguage:ebnf"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "antlr2",
                "extensions": [
                    ".g2"
                ]
            },
            {
                "id": "antlr3",
                "extensions": [
                    ".g3"
                ]
            },
            {
                "id": "antlr4",
                "extensions": [
                    ".g4"
                ]
            },
            {
                "id": "bison",
                "extensions": [
                    ".y"
                ]
            },
            {
                "id": "ebnf",
                "extensions": [
                    ".ebnf"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./"
    },
    "dependencies": {
        "abort-controller": "^3.0.0",
        "jsonc-parser": "^2.1.0",
        "vscode-languageclient": "6.1.0",
        "vscode-languageserver-types": "^3.15.1"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.6.2",
        "@types/vscode": "1.41.*",
        "glob": "^7.1.4",
        "mocha": "^7.1.0",
        "tslint": "^5.16.0",
        "typescript": "^3.8.3",
        "vsce": "^1.75.0",
        "vscode-test": "^1.3.0"
    },
    "configuration": {
        "type": "object",
        "title": "server configuration",
        "properties": {
            "antlr.path": {
                "type": "string",
                "default": "antlr",
                "description": "The path to server executable"
            },
            "antlr.arguments": {
                "type": "array",
                "default": [],
                "items": {
                    "type": "string"
                },
                "description": "Arguments for server"
            },
            "antlr.syncFileEvents": {
                "type": "boolean",
                "default": true,
                "description": "Whether or not to send file events to server (File created, changed or deleted). This can be disabled for performance consideration."
            },
            "antlr.trace": {
                "type": "string",
                "description": "Names a file that server should log a performance trace to, in chrome trace-viewer JSON format."
            }
        }
    }
}
